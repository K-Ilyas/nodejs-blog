<%- include("../../partials/nav_auth") %>
    <div class="row  justify-content-center">
        <div class="col-lg-6 col-md-8">
            <form method="post" action="/login" class="mt-3">
                <%-  include("../../partials/success")%>

                    <h2>Login</h2>
                    <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="text" class="form-control" name="email" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Password</label>
                        <input type="password" class="form-control" name="password" id="exampleInputPassword1">
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1" name="remember">
                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                    </div>
                    <%-  include("../../partials/messages")%>
                        <button type="submit" id="submit-form" class="btn btn-primary">Submit</button>
            </form>
            <div class="text-center">
                <div class="spinner-border text-success " role="status" id="show-spinner">
                    <span class="visually-hidden ">Loading...</span>
                </div>
            </div>
        </div>
        <%- include("../../partials/footer") %>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.5/dist/js.cookie.min.js"></script>
    <script src="js/auth.js"></script>
    <script>
        const user = Cookies.get("name");
        if (user) {
            document.querySelector("input[name=\"email\"]").value = user;
            document.querySelector("input[name=\"remember\"]").setAttribute("checked", true)
        }
    </script>